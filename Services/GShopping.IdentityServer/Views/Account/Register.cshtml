@model GShopping.IdentityServer.MainModule.Account.RegisterViewModel

<div class="login-page">
    <div class="lead">
        <h1>Nova Conta</h1>
        @*<p>Registro de conta local</p>*@
    </div>
     
    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    @*<h2>Registro de conta local</h2>*@
                </div>

                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Username">Usuário</label>
                            <input class="form-control" placeholder="nome do usuário" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input class="form-control" placeholder="email" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName">Nome</label>
                            <input class="form-control" placeholder="nome" asp-for="FirstName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">Sobrenome</label>
                            <input class="form-control" placeholder="sobrenome" asp-for="LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Senha</label>
                            <input type="password" class="form-control" placeholder="senha" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleName" ></label>
                            <select asp-for="RoleName" class="form-control"  asp-items="@(new SelectList(ViewBag.message))"></select>
                        </div>
                        <br/>
                        <button class="btn btn-primary" name="button" value="Register">Registrar</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancelar</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Login",new {Model.ReturnUrl })">Login</a>
                </div>
            </div>
        </div>


    </div>
</div>
