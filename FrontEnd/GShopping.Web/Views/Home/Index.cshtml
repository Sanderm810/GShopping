@model IEnumerable<ProductModel>

@{
    <script>
        function chageimage(id)
        {
            document.getElementById("image" + id).setAttribute("src", "/images/no_image.jpg");
        };
    </script>

    string getId(long id) => $"image{id}";
}

<form>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-4">
                <div class="p-0 my-3 border">
                    <div class="card">
                        <img id="@getId(product.Id)" src="@product.ImageUrl" onerror="chageimage(@product.Id)" class="card-img-top"/>
                        <div class="card-body">
                            <h3 class="card-title text-success">@product.SubstringName()</h3>
                            <span class="badge badge-light mb-2">@product.CategoryName</span>
                            <p class="card-text">@Html.Raw(@product.SubstringDescription())</p>
                            <div class="row">
                                 <div class="col pt-1">
                                     <span style="font-size:23px;">@product.Price.ToString("c")</span>
                                </div>
                                 <div class="col">
                                     <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-success form-control">Detalhes</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>